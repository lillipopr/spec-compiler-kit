{
  "description": "Hooks for spec-compiler-kit plugin: Phase review check and architecture layer validation",
  "hooks": {
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/hooks/phase-review-check.js"
          }
        ],
        "matcher": "tool == \"Edit\" && tool_input.file_path matches \"\\\\.(spec\\\\.md|PRD\\\\.md)$\"",
        "description": "Phase 审查闸口：确保 Phase N+1 编辑前，Phase N 已审查通过"
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/scripts/hooks/architecture-check.js"
          }
        ],
        "matcher": "tool == \"Edit\" && tool_input.file_path matches \"\\\\.(java|swift|vue|ts|tsx)$\"",
        "description": "架构分层检查：警告违反分层规范的依赖"
      }
    ]
  }
}
